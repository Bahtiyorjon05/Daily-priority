# Database
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# NextAuth
NEXTAUTH_SECRET="your-nextauth-secret-key"
# Set this to your deployed domain so links in emails are correct
NEXTAUTH_URL="https://daily-priority.vercel.app"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Email configuration
# Public base URL used in templates (fallbacks to NEXTAUTH_URL)
NEXT_PUBLIC_BASE_URL="https://daily-priority.vercel.app"
# Support email shown in UI (also used as fallback sender)
NEXT_PUBLIC_SUPPORT_EMAIL="dailypriorityapp@gmail.com"
SUPPORT_EMAIL="dailypriorityapp@gmail.com"


# For production (choose one option)
# Gmail
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=your-email@gmail.com



# Prayer Times API (Aladhan - Free, no key needed)
PRAYER_TIMES_API_URL="https://api.aladhan.com/v1"
# This API is completely free and requires no authentication

